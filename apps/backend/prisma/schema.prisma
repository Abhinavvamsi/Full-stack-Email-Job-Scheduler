generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Job {
  id           String   @id @default(uuid())
  email        String
  subject      String
  body         String
  scheduledAt  DateTime
  sentAt       DateTime?
  status       JobStatus @default(PENDING)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

enum JobStatus {
  PENDING
  SENT
  FAILED
}
